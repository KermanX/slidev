{
  "publisher": "antfu",
  "name": "slidev",
  "displayName": "Slidev",
  "type": "module",
  "preview": true,
  "version": "0.5.0",
  "description": "Slidev support for VS Code",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/slidevjs/slidev"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.cjs",
  "icon": "dist/res/logo.png",
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "slidev.choose-entry",
        "category": "Slidev",
        "title": "Choose active slides entry."
      },
      {
        "command": "slidev.add-entry",
        "category": "Slidev",
        "title": "Choose Markdown files to add as slides entries."
      },
      {
        "command": "slidev.set-as-active",
        "category": "Slidev",
        "title": "Set the given entry file as the active one",
        "icon": "$(eye)"
      },
      {
        "command": "slidev.prev",
        "category": "Slidev",
        "title": "Go to previous slide in this Markdown",
        "icon": "$(chevron-up)"
      },
      {
        "command": "slidev.next",
        "category": "Slidev",
        "title": "Go to next slide in this Markdown",
        "icon": "$(chevron-down)"
      },
      {
        "command": "slidev.move-up",
        "category": "Slidev",
        "title": "Move slide up in this Markdown",
        "icon": "$(triangle-up)"
      },
      {
        "command": "slidev.move-down",
        "category": "Slidev",
        "title": "Move slide down in this Markdown",
        "icon": "$(triangle-down)"
      },
      {
        "command": "slidev.refresh-preview",
        "category": "Slidev",
        "title": "Refresh preview page",
        "icon": "$(refresh)"
      },
      {
        "command": "slidev.config-port",
        "category": "Slidev",
        "title": "Configure preview port"
      },
      {
        "command": "slidev.start-dev",
        "category": "Slidev",
        "title": "Start slidev dev server",
        "icon": "$(run-all)"
      },
      {
        "command": "slidev.open-in-browser",
        "category": "Slidev",
        "title": "Open slides in browser",
        "icon": "$(globe)"
      },
      {
        "command": "slidev.preview-prev-click",
        "category": "Slidev",
        "title": "Navigate to prev click in preview window.",
        "icon": "$(arrow-left)"
      },
      {
        "command": "slidev.preview-next-click",
        "category": "Slidev",
        "title": "Navigate to next click in preview window.",
        "icon": "$(arrow-right)"
      },
      {
        "command": "slidev.preview-prev-slide",
        "category": "Slidev",
        "title": "Navigate to prev slide in preview window.",
        "icon": "$(arrow-up)"
      },
      {
        "command": "slidev.preview-next-slide",
        "category": "Slidev",
        "title": "Navigate to next slide in preview window.",
        "icon": "$(arrow-down)"
      },
      {
        "command": "slidev.enable-preview-sync",
        "category": "Slidev",
        "title": "Sync preview window with editor cursor",
        "icon": "$(unlock)"
      },
      {
        "command": "slidev.disable-preview-sync",
        "category": "Slidev",
        "title": "Unsync preview window with editor cursor",
        "icon": "$(lock)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "slidev-enabled && resourceLangId == markdown",
          "command": "slidev.prev",
          "group": "navigation"
        },
        {
          "when": "slidev-enabled && resourceLangId == markdown",
          "command": "slidev.next",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "slidev.preview-prev-slide",
          "when": "view =~ /slidev-preview/ && slidev-connected",
          "group": "navigation@1"
        },
        {
          "command": "slidev.preview-next-slide",
          "when": "view =~ /slidev-preview/ && slidev-connected",
          "group": "navigation@2"
        },
        {
          "command": "slidev.preview-prev-click",
          "when": "view =~ /slidev-preview/ && slidev-connected",
          "group": "navigation@3"
        },
        {
          "command": "slidev.preview-next-click",
          "when": "view =~ /slidev-preview/ && slidev-connected",
          "group": "navigation@4"
        },
        {
          "command": "slidev.start-dev",
          "when": "view =~ /slidev-preview/ && !slidev-connected",
          "group": "navigation@5"
        },
        {
          "command": "slidev.open-in-browser",
          "when": "view =~ /slidev-preview/ && slidev-connected",
          "group": "navigation@5"
        },
        {
          "command": "slidev.refresh-preview",
          "when": "view =~ /slidev-preview/",
          "group": "navigation@6"
        },
        {
          "command": "slidev.enable-preview-sync",
          "when": "view =~ /slidev-preview/ && !slidev-config.preview-sync",
          "group": "navigation@7"
        },
        {
          "command": "slidev.disable-preview-sync",
          "when": "view =~ /slidev-preview/ && slidev-config.preview-sync",
          "group": "navigation@7"
        }
      ],
      "view/item/context": [
        {
          "command": "slidev.set-as-active",
          "when": "view == slidev-projects-tree && viewItem == inactive-project",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Slidev",
      "properties": {
        "slidev.enabled": {
          "type": "boolean",
          "scope": "window",
          "description": "Force enable extension",
          "default": false
        },
        "slidev.port": {
          "type": "number",
          "scope": "window",
          "description": "The port of Slidev server",
          "default": 3030
        },
        "slidev.annotations": {
          "type": "boolean",
          "scope": "window",
          "description": "Display annotations for slides markdown files",
          "default": true
        },
        "slidev.preview-sync": {
          "type": "boolean",
          "scope": "window",
          "description": "Sync preview window with editor cursor",
          "default": true
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "slidev",
          "title": "Slidev",
          "icon": "dist/res/logo-mono.svg",
          "when": "slidev-enabled"
        }
      ]
    },
    "views": {
      "slidev": [
        {
          "id": "slidev-projects-tree",
          "name": "Projects",
          "visibility": "collapsed"
        },
        {
          "id": "slidev-slides-tree",
          "name": "Slides",
          "visibility": "visible"
        },
        {
          "type": "webview",
          "id": "slidev-preview",
          "name": "Preview",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "slidev-slides-tree",
        "contents": "No active slides entry.\n[Choose one](command:slidev.choose-entry)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "nr build",
    "build": "tsup --env.NODE_ENV production",
    "dev": "nr build --watch"
  },
  "devDependencies": {
    "@antfu/utils": "^0.7.7",
    "@iconify-json/carbon": "^1.1.31",
    "@slidev/parser": "workspace:*",
    "@slidev/types": "workspace:*",
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.88.0",
    "@vue/runtime-core": "^3.4.22",
    "get-port-please": "^3.1.2"
  }
}
